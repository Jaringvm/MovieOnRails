<% content_for :page_specific_styles do %>
  <%= stylesheet_link_tag 'pages/overview', media: 'all', 'data-turbolinks-track': 'reload' %>
<% end %>

<div class="d-flex justify-content-center">
  <table class="table table-striped table-hover table-dark w-50 mt-5">
    <thead>
      <tr>
        <% @movie_columns.each do |col| %>
          <th>
            <%= col %>
          </th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |mov| %>
        <tr>
          <% @movie_columns.each do |col| %>
            <td class="align-content-center">
              <%= mov[col] %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
